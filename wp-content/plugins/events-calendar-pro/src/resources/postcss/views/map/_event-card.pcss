.tribe-events-pro {

	/* -----------------------------------------------------------------------------
	 * Event Card
	 * ----------------------------------------------------------------------------- */

	.tribe-events-pro-map__event-card-wrapper {
		position: relative;
	}

	.tribe-events-pro-map__event-card {
		border: 1px solid transparent;
		padding: var(--spacer-2);
	}

	.tribe-events-pro-map__event-card-button {
		border: 1px solid var(--color-border-default);
		position: absolute;
		width: 100%;
		height: 100%;

		&:hover,
		&:focus {
			border: 1px solid var(--color-border-hover);
			z-index: var(--z-index-map-event-hover);
		}
	}

	.tribe-events-pro-map__event-card-wrapper--active {

		.tribe-events-pro-map__event-card-button {

			border: 1px solid var(--color-border-active);
			box-shadow: var(--box-shadow-card); /* @todo @fe: remove this from utilities var if we are not doing box shadow. Meet with @MattCR. */
			z-index: var(--z-index-map-event-hover);
		}

		.tribe-events-pro-map__event-actions {
			z-index: var(--z-index-map-event-hover-actions);
		}
	}

	.tribe-events-pro-map__event-row--gutters {
		margin-left: -9px;
		margin-right: -9px;

		& > .tribe-common-g-col {
			padding-left: 9px;
			padding-right: 9px;
		}
	}

	.tribe-events-pro-map__event-date-tag {
		margin-right: 0;
		width: var(--grid-width-1-of-8);
	}

	.tribe-events-pro-map__event-date-tag-datetime {
		display: flex;
		flex-direction: column;
		text-align: center;
	}

	.tribe-events-pro-map__event-date-tag-weekday {
		@mixin mobile-body-3;

		color: var(--color-text-secondary);
		margin-bottom: calc(var(--spacer-0) * -1);
		text-transform: uppercase;
	}

	.tribe-events-pro-map__event-wrapper {
		flex: none;
		width: calc(7 * var(--grid-width-1-of-8));
	}

	/* .tribe-events-pro-map__event {} */

	.tribe-events-pro-map__event-featured-image-wrapper {
		@mixin hidden;

		@media (--viewport-medium) {
			display: block !important;
			margin-bottom: 0;
			visibility: visible;
			width: calc(3 * var(--grid-width-1-of-7));
		}
	}

	.tribe-events-pro-map__event-featured-image-link {
		display: block;
		transition: var(--transition-opacity);

		&:hover,
		&:focus {
			opacity: var(--opacity-icon-hover);
		}

		&:active {
			opacity: var(--opacity-icon-active);
		}
	}

	.tribe-events-pro-map__event-featured-image {
		padding-bottom: 56.25%;
	}

	.tribe-events-pro-map__event-details {
		flex: none;

		@media (--viewport-medium) {
			width: calc(4 * var(--grid-width-1-of-7));
		}
	}

	.tribe-events-pro-map__event-datetime-wrapper {
		margin-bottom: var(--spacer-0);

		&:last-child {
			margin-bottom: 0;
		}
	}

	.tribe-events-pro-map__event-datetime-featured-icon {
		display: inline-block;
		margin-right: var(--spacer-0);
	}

	.tribe-events-pro-map__event-datetime-featured-text {
		@media (--viewport-medium) {
			@mixin visually-show;

			color: var(--color-accent-primary);
			font-weight: var(--font-weight-bold);
			margin-right: var(--spacer-1);
		}
	}

	.tribe-events-pro-map__event-datetime-recurring-icon {
		display: inline-block;
		margin-left: var(--spacer-0);
	}

	.tribe-events-pro-map__event-title {
		margin-bottom: var(--spacer-0);

		&:last-child {
			margin-bottom: 0;
		}
	}

	/* .tribe-events-pro-map__event-title-link {} */

	.tribe-events-pro-map__event-venue {
		font-style: normal;
		margin-bottom: var(--spacer-0);

		&:last-child {
			margin-bottom: 0;
		}
	}

	.tribe-events-pro-map__event-distance {
		@mixin hidden;

		@media (--viewport-medium) {
			color: var(--color-text-secondary);
			display: block !important;
			visibility: visible;
		}
	}

	.tribe-events-pro-map__event-actions {
		display: none;
		margin-top: var(--spacer-1);
		position: relative;
	}
}
